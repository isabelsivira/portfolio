<div id="newprojmain">
  <div>
    <h3>Create new project</h3>
  </div>
  <div>
    {{#if isLoggedIn}}
      {{#if isAdmin}}
        <form id="newprojform" action="/projects/new" method="post">
          <fieldset>
            <div class="form-group">
              <label for="projname">Project name:</label>
              <input type="text" name="projname" id="projname" required="required" class="form-control" />
            </div>
            <div class="form-group">
              <label for="projyear">Project year:</label>
              <input type="number" name="projyear" id="projyear" placeholder="2023" required="required" class="form-control" />
            </div>
            <div class="form-group">
              <label for="projdesc">Project description:</label>
              <textarea name="projdesc" id="projdesc" cols="30" rows="10" required="required" class="form-control"></textarea>
            </div>
            <div class="form-group">
              <label for="projtype">Project type:</label>
              <input type="text" name="projtype" id="projtype" required="required" class="form-control" />
            </div>
            <div class="form-group">
              <label for="projimg">Project image URL:</label>
              <input type="text" name="projimg" id="projimg" placeholder="/img/" required="required" class="form-control" />
            </div>
          </fieldset>
          <button type="submit" class="btn btn-primary">Add new project</button>
        </form>
      {{/if}}
    {{/if}}
  </div>
</div>
