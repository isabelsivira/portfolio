{{#if dbError}}
  <p>Error: {{theError}}</p>
{{/if}}
<h3>Create a New Series</h3>
<form action="/series/new" method="post">
  <div class="form-group">
    <label for="sname">Name:</label>
    <input type="text" name="sname" id="sname" placeholder="Name" required class="form-control" />
  </div>
  <div class="form-group">
    <label for="stype">Type:</label>
    <input type="text" name="stype" id="stype" placeholder="Type" required class="form-control" />
  </div>
  <div class="form-group">
    <label for="sdesc">Description:</label>
    <textarea name="sdesc" id="sdesc" placeholder="Description" required class="form-control"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
